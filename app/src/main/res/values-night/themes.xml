<resources>
    <!-- Base application theme. -->

    <style name="Theme.MyProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- My settings-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">#018786</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#131313</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#44F1BB</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WithToolBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#018786</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#4C4C4C</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="Theme.App.Calendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">

        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>



    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="EventButton">
        <item name="android:layout_marginStart">-16dp</item>
        <item name="android:drawableRight">@drawable/ic_navigate_next_black_24dp</item>
        <item name="android:drawableTint">#BDBDBD</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:textColor">#BDBDBD</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>